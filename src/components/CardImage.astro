---
const { title, subtitle, description, image } = Astro.props;
---

<div class="max-w-sm rounded-2xl overflow-hidden border border-gray-200 bg-white shadow hover:shadow-lg transition-shadow duration-300">
  <!-- Imagen -->
  <img src="/webs.webp" alt="E-Commerce Platform" class="w-full h-48 object-cover" />

  <!-- Contenido -->
  <div class="p-6">
    <p class="text-sm text-blue-600 font-medium mb-1">{subtitle}</p>
    <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
    <p class="mt-2 text-sm text-gray-600">{description}</p>
    <a href="#" class="mt-4 inline-flex items-center text-sm text-blue-600 font-medium hover:underline">
      View Case Study
      <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
  </div>
</div>
