---
const { title, subtitle } = Astro.props;
---

<div class="max-w-sm rounded-2xl border border-gray-200 bg-white p-6 shadow hover:shadow-lg transition-shadow duration-300">
  <div class="mb-4 inline-flex items-center justify-center rounded-xl bg-blue-50 p-3">
    <!-- Icono (puede ser SVG o imagen) -->
    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </div>
  <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
  <p class="mt-2 text-sm font-semibold text-gray-600">{subtitle}</p>
</div>
